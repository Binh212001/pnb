<odoo>
    <record id="view_hr_health_insurance_tree" model="ir.ui.view">
        <field name="name">hr.health.insurance.tree</field>
        <field name="model">hr.health.insurance</field>
        <field name="arch" type="xml">
            <tree string="Health Insurance">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="insurance_number"/>
                <field name="insurance_type"/>
                <field name="registered_hospital"/>
                <field name="issue_date"/>
                <field name="expiry_date"/>
                <field name="insurance_status"/>
            </tree>
        </field>
    </record>

     <record id="view_hr_health_insurance_form" model="ir.ui.view">
        <field name="name">hr.health.insurance.form</field>
        <field name="model">hr.health.insurance</field>
        <field name="arch" type="xml">
            <form string="Health Insurance">
                <sheet>
                    <group>
                        <field name="employee_id"/>
                        <field name="insurance_number"/>
                        <field name="insurance_type"/>
                        <field name="registered_hospital"/>
                        <field name="issue_date"/>
                        <field name="expiry_date"/>
                        <field name="coverage_rate"/>
                        <field name="contribution_rate"/>
                        <field name="base_salary"/>
                        <field name="max_coverage_limit"/>
                        <field name="insurance_status"/>
                    </group>
                    <notebook>
                        <page string="Additional Information">
                            <group>
                                <field name="history_ids"/>
                                <field name="annual_claims"/>
                                <field name="policy_rules"/>
                                <field name="related_social_insurance"/>
                                <field name="maternity_support"/>
                                <field name="extended_benefits"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>


     <record id="action_hr_health_insurance" model="ir.actions.act_window">
        <field name="name">Health Insurance</field>
        <field name="res_model">hr.health.insurance</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new Health Insurance record.
            </p>
        </field>
    </record>
</odoo>
